
<body>
  <section class="hero-stack wf-section">
    <div class="container">
      <div class="hero-wrapper-two">
        <h1>Book <%= @boat.name %></h1>
        <p class="margin-bottom-24px"><%= @boat.description %>.</p><img src= "<%= @boat.photo %>" loading="lazy" alt="" class="hero-image shadow-two">
      </div>
    </div>
    <div class="container">
      <div class="form-block w-form">
        <%= simple_form_for [@boat, @booking] do |f| %>
        <%= f.input :start_date, data: { target: "booking.start_date" } %>
        <%= f.input :end_date, data: { target: "booking.end_date" } %>
        <%= f.submit "Create Booking", class: "btn btn-primary" %>
        <% end %>

    </div>
    <div class="container">
      <p> Estimated price: <%= @estimated_price %> </p>
    </div>
  </section>
  <script src="https://d3e54v103j8qbb.cloudfront.net/js/jquery-3.5.1.min.dc5e7f18c8.js?site=63d291af0936341aebd02ba8" type="text/javascript" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <!-- [if lte IE 9]><script src="https://cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif] -->
</body>
</html>
