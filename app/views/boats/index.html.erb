

<div class="container-fluid">
  <div class="boat-index-container">
    <% @boats.each do |boat| %>
      <div class="boat-index-card">
        <div class="boat-index-card-img">
          <%= image_tag "https://images.unsplash.com/photo-1605281317010-fe5ffe798166?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1744&q=80" %>
        </div>
        <div class="boat-index-card-info">
          <p>
            <%= boat.price %>
          </p>
          <p><%= boat.location %></p>
          <p><%= boat.description %></p>
          <p><%= boat.user.email %></p>
          <div class="boat-index-card-btn">
            <%= link_to "More info", boat_path(boat)%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
